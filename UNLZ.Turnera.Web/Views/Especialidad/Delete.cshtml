@model UNLZ.Turnera.Web.Models.EspecialidadModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Especialidad</h1>

<h3>¿Estás seguro de que deseas marcar esta especialidad como "Inactivo"?</h3>
<div>
    <h4>Especialidad</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.model.IdEspecialidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.model.IdEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.model.NombreEspecialidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.model.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="idEspecialidad" value="@Model.model.IdEspecialidad" />
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
