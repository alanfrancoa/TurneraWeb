@{
    ViewBag.Title = "Buscador de Turnos";
}

<h2>Buscador de Turnos</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="BuscarTurnosPorDni" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="dniPaciente" class="control-label">DNI Paciente</label>
                <input type="text" id="dniPaciente" name="dni" class="form-control" placeholder="Ingrese DNI" />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Buscar turnos</button>
            </div>
        </form>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info mt-3">
        @TempData["Mensaje"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
}
