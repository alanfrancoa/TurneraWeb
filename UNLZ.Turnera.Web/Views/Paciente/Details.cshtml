@model UNLZ.Turnera.Web.Models.PacienteModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <div class ="col-md-4">
            <div class="form-group">
                <label asp-for="model.DniPaciente" class="control-label"></label>
                <input asp-for="model.DniPaciente" class="form-control" disabled />
                <span asp-validation-for="model.DniPaciente" class="text-danger"></span>

                <label asp-for="model.NombrePaciente" class="control-label"></label>
                <input asp-for="model.NombrePaciente" class="form-control" disabled />
                <span asp-validation-for="model.NombrePaciente" class="text-danger"></span>

                <label asp-for="model.EmailPaciente" class="control-label"></label>
                <input asp-for="model.EmailPaciente" class="form-control" disabled />
                <span asp-validation-for="model.EmailPaciente" class="text-danger"></span>

                <label asp-for="model.TelefonoPaciente" class="control-label"></label>
                <input asp-for="model.TelefonoPaciente" class="form-control" disabled />
                <span asp-validation-for="model.TelefonoPaciente" class="text-danger"></span>

                <label asp-for="model.Estado" class="control-label"></label>
                <input asp-for="model.Estado" class="form-control" disabled />
                <span asp-validation-for="model.Estado" class="text-danger"></span>

            </div>

        </div>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { dniPaciente = Model.model.DniPaciente }, new { @class = "btn btn-primary btn-sm mr-1" })

    <a asp-action="Index" class="btn btn-secondary btn-sm mt-1">Volver al listado</a>
</div>
