@model UNLZ.Turnera.Web.Models.TurnoModel

<h1>Editar Turno </h1>

<hr />
<div class="row">
<div class="col-md-4">

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Campo Paciente -->
    <div class="form-group">
        <label asp-for="model.DniPaciente" class="control-label">Paciente</label>
        @Html.DropDownListFor(m => m.model.DniPaciente, Model.ListaPacientes, "Seleccione un paciente", new { @class = "form-control" })
        <span asp-validation-for="model.DniPaciente" class="text-danger"></span>
    </div>

    <!-- Campo Fecha -->
    <div class="form-group">
        <label asp-for="model.FechaCreacion" class="control-label">Fecha</label>
        <input asp-for="model.FechaCreacion" type="date" class="form-control" />
        <span asp-validation-for="model.FechaCreacion" class="text-danger"></span>
    </div>

    <!-- Campo Hora -->
    <div class="form-group">
        <label asp-for="model.HoraCreacion" class="control-label">Hora</label>
        <input asp-for="model.HoraCreacion" type="time" class="form-control" />
        <span asp-validation-for="model.HoraCreacion" class="text-danger"></span>
    </div>

    <!-- Campo Profesional -->
    <div class="form-group">
        <label asp-for="model.IdProfesional" class="control-label">Profesional</label>
        @Html.DropDownListFor(m => m.model.IdProfesional, Model.ListaProfesionales, "Seleccione un profesional", new { @class = "form-control" })
        <span asp-validation-for="model.IdProfesional" class="text-danger"></span>
    </div>

    <!-- Campo Disponibilidad -->
    <div class="form-group">
        <label asp-for="model.IdDisponibilidad" class="control-label">Disponibilidad</label>
        @Html.DropDownListFor(m => m.model.IdDisponibilidad, Model.ListaDisponibilidades, "Seleccione una disponibilidad", new { @class = "form-control" })
        <span asp-validation-for="model.IdDisponibilidad" class="text-danger"></span>
    </div>

    <!-- Campo Estado -->
    <div class="form-group">
        <label asp-for="model.EstadoTurno" class="control-label">Estado</label>
        <select asp-for="model.EstadoTurno" class="form-control">
            <option value="Confirmado" selected="@(Model.model.EstadoTurno == "Confirmado")">Confirmado</option>
            <option value="Pendiente" selected="@(Model.model.EstadoTurno == "Pendiente")">Pendiente</option>
            <option value="Cancelado" selected="@(Model.model.EstadoTurno == "Cancelado")">Cancelado</option>
        </select>
    </div>

            <button type="submit" class="btn btn-primary mt-1">Guardar cambios</button>
</form>

        <a asp-action="Index" class="btn btn-secondary mt-1">Volver al listado</a>
       

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
